					<BFHasParticleComponent />
					<BFAnimatedObjectControllerComponent autoStart="true" loop="true" duration="7.0" />
				</BFPhysObj>
			</instance>
		</BFNamedBinder>
		<BFNamedBinder binderName="bats" required="0">
