		<ZTTriggeredEventsComponent>
			<Bats_flyout>
				<nonbroadcast>
					<event msg="BFSND_PLAY_FROM_ENTITY" data="BFString" string="Batcave_batsfly" />
				</nonbroadcast>
			</Bats_flyout>
		</ZTTriggeredEventsComponent>
	</shared>
	<binder>
