<UIToggleButton templateName="watertextbutton" sticky="1">
   <UIRegion x="0" y="0" w="150" h="25" xalign="min" yalign="min" walign="len" halign="len"/>
   <UIAspect alwayshit="true">
      <default>
         <BFFont align="center">
            <BFColor r="150" g="150" b="150" a="255"/>
         </BFFont>
      </default>
      <standard>
         <normal>
            <BFFont align="center">
               <BFColor r="200" g="200" b="200" a="75"/>
            </BFFont>
         </normal>
         <highlighted>
            <BFFont align="center">
               <BFColor r="230" g="230" b="150" a="150"/>
            </BFFont>
         </highlighted>
         <activated>
            <BFFont align="center">
               <BFColor r="150" g="0" b="0" a="255"/>
            </BFFont>
         </activated>
      </standard>
      <alternate>
         <normal>
            <BFFont align="center">
               <BFColor r="225" g="120" b="20" a="255"/>
            </BFFont>
         </normal>
         <highlighted>
            <BFFont align="center">
               <BFColor r="230" g="230" b="150" a="255"/>
            </BFFont>
         </highlighted>
         <activated>
            <BFFont align="center">
               <BFColor r="225" g="120" b="20" a="255"/>
            </BFFont>
         </activated>
      </alternate>
   </UIAspect>
</UIToggleButton>
